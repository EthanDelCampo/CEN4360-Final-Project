<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/neutral_light">

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/checkBoxItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/primary_green" />

    <!-- Text Column -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="12dp">

        <!-- Item Name -->
        <TextView
            android:id="@+id/textViewItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item name"
            android:textSize="18sp"
            android:textColor="@color/text_dark" />

        <!-- Quantity + Category -->
        <TextView
            android:id="@+id/textViewItemDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity | Category"
            android:textSize="14sp"
            android:textColor="@color/neutral_gray" />
    </LinearLayout>

</LinearLayout>
